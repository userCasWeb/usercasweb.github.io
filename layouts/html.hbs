{{>header }}
  <h1 class="padding-top-4 front">{{ title }}</h1>
  <p class="h5 excerpt color-excerpt">{{ excerpt }}</p>
  <main class="">
    {{{ contents }}}
    {{#if collections.html }}
      <ul class="grid-2">
      {{#each collections.html }}
        <li>
          <h5 class="color-link"><a href="/{{path}}">{{ title }}</a></h5>
          <span class="dateTag">{{ formattedDate date }} @ {{ collections }}</span>
          <p class="color-excerpt">{{ excerpt }}</p>
        </li>
      {{/each}}
      </ul>
    {{/if}}
  </main>
{{>footer }}